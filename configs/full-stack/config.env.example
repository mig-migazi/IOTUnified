# Full Stack IoT Environment Configuration
# Copy this file to config.env and customize for your environment

# Pelion Device Management API Configuration
PELION_API_KEY=your_actual_api_key_here

# Device Simulation Configuration
DEVICE_ID=device-simulator-001
DEVICE_SIMULATION_INTERVAL=5.0
DEVICE_SIMULATION_ENABLED=true

# MQTT Configuration
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_USE_TLS=false
MQTT_USERNAME=
MQTT_PASSWORD=

# LwM2M Server Configuration
LWM2M_SERVER_HOST=lwm2m-server
LWM2M_SERVER_PORT=5684
LWM2M_SERVER_HTTP_PORT=8080
LWM2M_SERVER_URL=http://lwm2m-server:8080

# Sparkplug B Configuration
SPARKPLUG_GROUP_ID=IIoT
SPARKPLUG_NODE_ID=device-simulator-001
SPARKPLUG_DEVICE_ID=smart-breaker-001

# Redpanda Configuration
REDPANDA_BROKERS=redpanda:29092
REDPANDA_CONSOLE_URL=http://localhost:8086

# Monitoring Configuration (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
MQTT_MONITOR_ENABLED=false

# Docker Resource Limits
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1.0 